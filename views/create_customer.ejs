<!DOCTYPE html>
<html lang="en">
<head>
    <% include partials/page/head.ejs %>
</head>
<header>
    <% include partials/page/header.ejs %>
</header>
<% include partials/page/jsdefaults.ejs %>
<div class="container">
    <h2>Create Customer</h2>

    <form name="login-user-form" id="assign_customer" method="post"
          action="/users/customer/assign">
        <div class="login-form">
            <div class="form-group">
                <input name="customerID" type="text"
                       class="form-control login-field"
                       value=""
                       placeholder="Enter Customer ID"
                       required/>
            </div>

            <div class="form-group">
                <input name="nickname" type="text"
                       class="form-control login-field"
                       value=""
                       placeholder="Enter Customer Nickname"
                       required/>
            </div>

            <div class="form-group">
                <input name="lineID" type="text"
                       class="form-control login-field"
                       value=""
                       placeholder="Enter Customer Line ID"
                        />
            </div>

            <div class="form-group">
                <input name="phone" type="text"
                       class="form-control login-field"
                       value=""
                       placeholder="Enter Customer Phone Number"
                        />
            </div>

            <div class="form-group">
                <input name="percent" type="text"
                       class="form-control login-field"
                       value=""
                       placeholder="Enter Customer Percent"
                        />
            </div>

            <div class="form-group">
                <input name="paymentCondition" type="text"
                       class="form-control login-field"
                       value=""
                       placeholder="Enter Customer Payment Condition"
                        />
            </div>
        </div>
        <input class="btn btn-primary btn-lg btn-block"
               type="submit" value="Create"/>
    </form>


</div>
